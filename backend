from flask import Flask, jsonify, request, render_template

app = Flask(__name__)

# --- MOCK DATA STORE (In a real app, this would be a database like PostgreSQL or MongoDB) ---
MOCK_USERS = {}
MOCK_WEATHER_DATA = {
    "Nashik, Maharashtra": {
        "region": "Nashik, Maharashtra",
        "date": "16 Oct 2025",
        "temp_current": "30¬∞C",
        "temp_min_max": "23¬∞C / 33¬∞C",
